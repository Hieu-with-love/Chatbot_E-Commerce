<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_light">

    <TextView
        android:id="@+id/confirmation_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm: Không xác định"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/confirmation_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lượng: 0"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/confirmation_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 0 VNĐ"
        android:textColor="@color/accent"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/confirmation_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Không xác định"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

</LinearLayout>