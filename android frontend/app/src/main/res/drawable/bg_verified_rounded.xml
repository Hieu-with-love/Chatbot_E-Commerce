<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/verified" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/unverified" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>